{
    "manifest_version": 3,
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "icons": {
        "16": "./images/16.png",
        "32": "./images/32.png",
        "64": "./images/64.png",
        "128": "./images/128.png"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "content_scripts": [
        {
          "js": ["scripts/content.js","components/menu/menu.js", "components/iconButton/iconButton.js", "components/bubble/bubble.js","constant.js"],
          "css": ["components/iconButton/iconButton.css", "components/bubble/bubble.css","components/menu/menu.css"],
          "matches": ["<all_urls>"]
        }
    ],
    "action": {
      "default_popup": "./popup/popup.html",
      "icons": {
        "16": "./images/16.png",
        "32": "./images/32.png",
        "64": "./images/64.png",
        "128": "./images/128.png"
    }
    },
    "permissions": [
        "activeTab",
        "scripting",
        "windows"
    ]

}